// Hero Section Styles

.hero-section
  padding 4rem 0
  background-image url('../images/section-bg1-1024x626.png')
  background-size cover
  background-position center
  background-repeat no-repeat
  position relative
  overflow hidden
  
  +respond(tablet)
    padding 3rem 0
  
  +respond(mobile)
    padding 2rem 0

  .container
    layout-container()

.hero-content
  display grid
  grid-template-columns 1fr 1fr
  gap 4rem
  align-items center
  
  +respond(laptop)
    gap 3rem
  
  +respond(tablet)
    grid-template-columns 1fr
    gap 2rem
    text-align center
  
  +respond(mobile)
    gap 1.5rem

// Hero Text
.hero-text
  display flex
  flex-direction column
  gap 1.5rem
  
  +respond(tablet)
    align-items center
  
  +respond(mobile)
    gap 1.25rem

.hero-tagline
  font-size 1rem
  font-weight 600
  color primary-color
  text-transform uppercase
  letter-spacing 2px
  margin-bottom 0.5rem
  
  +respond(tablet)
    font-size 0.95rem
  
  +respond(mobile)
    font-size 0.9rem
    letter-spacing 1.5px

.hero-headline
  font-size 3rem
  font-weight 700
  color neutral-dark
  line-height 1.2
  margin 0
  
  +respond(laptop)
    font-size 2.5rem
  
  +respond(tablet)
    font-size 2.25rem
  
  +respond(mobile)
    font-size 1.75rem

.hero-description
  font-size 1.125rem
  font-weight 400
  color neutral-gray
  line-height 1.7
  margin 0
  max-width 550px
  
  +respond(tablet)
    max-width 100%
    font-size 1.05rem
  
  +respond(mobile)
    font-size 1rem
    line-height 1.6

.hero-cta-button
  display inline-block
  padding 1rem 2.5rem
  background-color accent-color
  color #000
  text-decoration none
  font-size 1rem
  font-weight 600
  text-transform uppercase
  letter-spacing 1px
  border-radius 6px
  transition all 0.3s ease
  align-self flex-start
  margin-top 0.5rem
  
  +respond(tablet)
    align-self center
  
  +respond(mobile)
    padding 0.875rem 2rem
    font-size 0.95rem
  
  &:hover
    background-color primary-color
    color #fff
    transform translateY(-2px)
  
  &:active
    transform translateY(0)
    box-shadow 0 4px 10px rgba(254, 198, 41, 0.2)

// Hero Image
.hero-image
  display flex
  justify-content center
  align-items center
  
  +respond(tablet)
    order -1

.hero-illustration
  max-width 100%
  height auto
  display block
  object-fit contain
  
  +respond(tablet)
    max-width 80%
  
  +respond(mobile)
    max-width 100%

