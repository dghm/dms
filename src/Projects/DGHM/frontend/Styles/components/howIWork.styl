// How I Work Section Styles

.how-i-work-section
  padding 5rem 0
  background-image url('../images/section-bg4-1024x570.png')
  background-size cover
  background-position center
  background-repeat no-repeat
  position relative
  
  +respond(tablet)
    padding 4rem 0
  
  +respond(mobile)
    padding 3rem 0

  .container
    layout-container()

// How I Work Header
.how-i-work-header
  text-align center
  margin-bottom 4rem
  
  +respond(tablet)
    margin-bottom 3rem
  
  +respond(mobile)
    margin-bottom 2.5rem

.how-i-work-tagline
  font-size 1rem
  font-weight 600
  color primary-color
  text-transform uppercase
  letter-spacing 2px
  margin-bottom 1rem
  
  +respond(tablet)
    font-size 0.95rem
  
  +respond(mobile)
    font-size 0.9rem
    letter-spacing 1.5px

.how-i-work-title
  font-size 2.5rem
  font-weight 700
  color neutral-dark
  line-height 1.2
  margin 0 0 1.5rem 0
  
  +respond(laptop)
    font-size 2.25rem
  
  +respond(tablet)
    font-size 2rem
  
  +respond(mobile)
    font-size 1.75rem
    margin-bottom 1rem

.how-i-work-description
  font-size 1.125rem
  font-weight 400
  color neutral-gray
  line-height 1.7
  margin 0 auto
  max-width 700px
  
  +respond(tablet)
    font-size 1.05rem
    max-width 600px
  
  +respond(mobile)
    font-size 1rem
    line-height 1.6

// Steps Container
.steps-container
  display grid
  grid-template-columns repeat(4, 1fr)
  gap 2rem
  align-items start
  
  +respond(laptop)
    gap 1.5rem
  
  +respond(tablet)
    grid-template-columns repeat(2, 1fr)
    gap 2rem
  
  +respond(mobile)
    grid-template-columns 1fr
    gap 2rem
    max-width 400px
    margin 0 auto

// Step Item
.step-item
  display flex
  flex-direction column
  align-items center
  text-align center
  position relative

  &:last-child .step-arrow
    display none

.step-icon
  width 100px
  height 100px
  display flex
  align-items center
  justify-content center
  margin-bottom 1.5rem
  background-color base-white
  border-radius 50%
  transition all 0.3s ease
  
  +respond(tablet)
    width 90px
    height 90px
    margin-bottom 1.25rem
  
  +respond(mobile)
    width 80px
    height 80px
    margin-bottom 1rem

  img
    max-width 70%
    max-height 70%
    height auto
    object-fit contain

  .step-item:hover &
    transform scale(1.1)

.step-arrow
  position absolute
  top 50px
  right -20px
  width 40px
  height 40px
  display flex
  align-items center
  justify-content center
  z-index 1
  
  +respond(tablet)
    display none
  
  +respond(mobile)
    display none

.step-title
  font-size 1.375rem
  font-weight 600
  color primary-color
  margin 0 0 1rem 0
  line-height 1.3
  
  +respond(tablet)
    font-size 1.25rem
  
  +respond(mobile)
    font-size 1.125rem
    margin-bottom 0.75rem

.step-description
  font-size 1rem
  font-weight 400
  color neutral-gray
  line-height 1.6
  margin 0
  
  +respond(tablet)
    font-size 0.95rem
  
  +respond(mobile)
    font-size 0.9rem
    line-height 1.5

