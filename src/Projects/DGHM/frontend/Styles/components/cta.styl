// CTA Section Styles

.cta-section
  padding 5rem 0
  background-image url('../images/section-bg6.png')
  background-size cover
  background-position center
  background-repeat no-repeat
  position relative
  overflow hidden
  
  +respond(tablet)
    padding 4rem 0
  
  +respond(mobile)
    padding 3rem 0

  .container
    layout-container()

.cta-content
  display grid
  grid-template-columns 1fr 1fr
  gap 4rem
  align-items center
  
  +respond(laptop)
    gap 3rem
  
  +respond(tablet)
    grid-template-columns 1fr
    gap 2rem
    text-align center
  
  +respond(mobile)
    gap 1.5rem

// CTA Text
.cta-text
  display flex
  flex-direction column
  gap 1.5rem
  
  +respond(tablet)
    align-items center
  
  +respond(mobile)
    gap 1.25rem

.cta-title
  font-size 3rem
  font-weight 700
  color base-white
  line-height 1.2
  margin 0
  
  +respond(laptop)
    font-size 2.5rem
  
  +respond(tablet)
    font-size 2.25rem
  
  +respond(mobile)
    font-size 1.75rem

.cta-description
  font-size 1.125rem
  font-weight 400
  color rgba(255, 255, 255, 0.9)
  line-height 1.7
  margin 0
  max-width 500px
  
  +respond(tablet)
    max-width 100%
    font-size 1.05rem
  
  +respond(mobile)
    font-size 1rem
    line-height 1.6

.cta-button
  display inline-block
  padding 1rem 2.5rem
  background-color accent-color
  color #000
  text-decoration none
  font-size 1rem
  font-weight 600
  text-transform uppercase
  letter-spacing 1px
  border-radius 6px
  transition all 0.3s ease
  align-self flex-start
  margin-top 0.5rem
  
  +respond(tablet)
    align-self center
  
  +respond(mobile)
    padding 0.875rem 2rem
    font-size 0.95rem
  
  &:hover
    background-color primary-color
    color #fff
    transform translateY(-2px)
  
  &:active
    transform translateY(0)
    box-shadow 0 4px 10px rgba(254, 198, 41, 0.3)

// CTA Image
.cta-image
  display flex
  justify-content center
  align-items center
  
  +respond(tablet)
    order -1

.cta-illustration
  max-width 100%
  height auto
  display block
  object-fit contain
  
  +respond(tablet)
    max-width 80%
  
  +respond(mobile)
    max-width 100%

