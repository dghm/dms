// Testimonials Section Styles

.testimonials-section
  padding 5rem 0
  background-image url('../images/section-bg5-1024x398.png')
  background-size cover
  background-position center
  background-repeat no-repeat
  position relative
  
  +respond(tablet)
    padding 4rem 0
  
  +respond(mobile)
    padding 3rem 0

  .container
    layout-container()

// Testimonials Header
.testimonials-header
  text-align center
  margin-bottom 4rem
  
  +respond(tablet)
    margin-bottom 3rem
  
  +respond(mobile)
    margin-bottom 2.5rem

.testimonials-tagline
  font-size 1rem
  font-weight 600
  color primary-color
  text-transform uppercase
  letter-spacing 2px
  margin-bottom 1rem
  
  +respond(tablet)
    font-size 0.95rem
  
  +respond(mobile)
    font-size 0.9rem
    letter-spacing 1.5px

.testimonials-title
  font-size 2.5rem
  font-weight 700
  color neutral-dark
  line-height 1.2
  margin 0
  
  +respond(laptop)
    font-size 2.25rem
  
  +respond(tablet)
    font-size 2rem
  
  +respond(mobile)
    font-size 1.75rem

// Testimonials Grid
.testimonials-grid
  display grid
  grid-template-columns repeat(3, 1fr)
  gap 2rem
  
  +respond(laptop)
    gap 1.5rem
  
  +respond(tablet)
    grid-template-columns 1fr
    gap 2rem
    max-width 600px
    margin 0 auto
  
  +respond(mobile)
    gap 1.5rem

// Testimonial Card
.testimonial-card
  background-color base-white
  border-radius 12px
  padding 2rem
  box-shadow 0 5px 15px rgba(0, 0, 0, 0.08)
  transition all 0.3s ease
  
  +respond(tablet)
    padding 1.75rem
  
  +respond(mobile)
    padding 1.5rem

  &:hover
    transform translateY(-5px)
    box-shadow 0 10px 30px rgba(0, 0, 0, 0.12)

.testimonial-stars
  display flex
  gap 0.25rem
  margin-bottom 1.5rem
  justify-content center
  
  +respond(tablet)
    margin-bottom 1.25rem
  
  +respond(mobile)
    margin-bottom 1rem

.star
  color accent-color
  font-size 1.25rem
  line-height 1
  
  +respond(tablet)
    font-size 1.125rem
  
  +respond(mobile)
    font-size 1rem

.testimonial-quote
  font-size 1rem
  font-weight 400
  color neutral-gray
  line-height 1.7
  margin 0 0 1.5rem 0
  text-align center
  
  +respond(tablet)
    font-size 0.95rem
    margin-bottom 1.25rem
  
  +respond(mobile)
    font-size 0.9rem
    line-height 1.6
    margin-bottom 1rem

.testimonial-author
  display flex
  align-items center
  justify-content center
  gap 1rem

.testimonial-avatar
  width 50px
  height 50px
  border-radius 50%
  overflow hidden
  flex-shrink 0
  
  +respond(mobile)
    width 45px
    height 45px

  img
    width 100%
    height 100%
    object-fit cover

.testimonial-info
  display flex
  flex-direction column
  gap 0.25rem

.testimonial-name
  font-size 1rem
  font-weight 600
  color neutral-dark
  line-height 1.3
  
  +respond(tablet)
    font-size 0.95rem
  
  +respond(mobile)
    font-size 0.9rem

.testimonial-role
  font-size 0.875rem
  font-weight 400
  color neutral-gray
  line-height 1.3
  
  +respond(tablet)
    font-size 0.85rem
  
  +respond(mobile)
    font-size 0.8rem

