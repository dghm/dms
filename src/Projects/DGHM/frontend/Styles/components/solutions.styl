// Solutions Section Styles

.solutions-section
  padding 5rem 0
  background-image url('../images/section-bg2-1024x570.png')
  background-size cover
  background-position center
  background-repeat no-repeat
  position relative
  
  +respond(tablet)
    padding 4rem 0
  
  +respond(mobile)
    padding 3rem 0

  .container
    layout-container()

// Solutions Header
.solutions-header
  text-align center
  margin-bottom 4rem
  
  +respond(tablet)
    margin-bottom 3rem
  
  +respond(mobile)
    margin-bottom 2.5rem

.solutions-tagline
  font-size 1rem
  font-weight 600
  color primary-color
  text-transform uppercase
  letter-spacing 2px
  margin-bottom 1rem
  
  +respond(tablet)
    font-size 0.95rem
  
  +respond(mobile)
    font-size 0.9rem
    letter-spacing 1.5px

.solutions-title
  font-size 2.5rem
  font-weight 700
  color neutral-dark
  line-height 1.2
  margin 0 0 1.5rem 0
  
  +respond(laptop)
    font-size 2.25rem
  
  +respond(tablet)
    font-size 2rem
  
  +respond(mobile)
    font-size 1.75rem
    margin-bottom 1rem

.solutions-description
  font-size 1.125rem
  font-weight 400
  color neutral-gray
  line-height 1.7
  margin 0 auto
  max-width 700px
  
  +respond(tablet)
    font-size 1.05rem
    max-width 600px
  
  +respond(mobile)
    font-size 1rem
    line-height 1.6

// Solutions Grid
.solutions-grid
  display grid
  grid-template-columns repeat(3, 1fr)
  gap 2rem
  
  +respond(laptop)
    grid-template-columns repeat(2, 1fr)
    gap 1.5rem
  
  +respond(tablet)
    grid-template-columns 1fr
    gap 2rem
    max-width 600px
    margin 0 auto
  
  +respond(mobile)
    gap 1.5rem

// Solution Card
.solution-card
  background-color base-white
  border 1px solid #e0e0e0
  border-radius 12px
  padding 2.5rem 2rem
  text-align center
  transition all 0.3s ease
  display flex
  flex-direction column
  
  +respond(tablet)
    padding 2rem 1.5rem
  
  +respond(mobile)
    padding 1.75rem 1.5rem

  &:hover
    transform translateY(-5px)
    box-shadow 0 10px 30px rgba(0, 0, 0, 0.1)
    border-color primary-color

.solution-card-highlight
  background-color #faf9f7
  
  &:hover
    background-color #f5f3f0

.solution-icon
  display flex
  justify-content center
  align-items center
  margin-bottom 1.5rem
  height 80px
  
  +respond(tablet)
    height 70px
    margin-bottom 1.25rem
  
  +respond(mobile)
    height 60px
    margin-bottom 1rem

  img
    max-width 100%
    max-height 100%
    height auto
    object-fit contain

.solution-card-title
  font-size 1.5rem
  font-weight 600
  color primary-color
  margin 0 0 0.5rem 0
  line-height 1.3
  
  +respond(tablet)
    font-size 1.375rem
  
  +respond(mobile)
    font-size 1.25rem

.solution-card-subtitle
  font-size 1.125rem
  font-weight 500
  color neutral-dark
  margin 0 0 0.75rem 0
  line-height 1.4
  
  +respond(tablet)
    font-size 1.05rem
  
  +respond(mobile)
    font-size 1rem

.solution-card-description
  font-size 0.95rem
  font-weight 400
  color neutral-gray
  line-height 1.5
  margin 0 0 1.5rem 0
  
  +respond(tablet)
    font-size 0.9rem
  
  +respond(mobile)
    font-size 0.875rem

.solution-features
  display flex
  flex-direction column
  gap 1rem
  margin-bottom 1.5rem
  text-align left
  
  +respond(mobile)
    gap 0.875rem

.solution-feature
  display flex
  align-items flex-start
  gap 0.75rem
  font-size 0.95rem
  font-weight 400
  color neutral-gray
  line-height 1.6
  
  +respond(tablet)
    font-size 0.9rem
  
  +respond(mobile)
    font-size 0.875rem

.solution-check
  color primary-color
  font-weight 600
  font-size 1.125rem
  flex-shrink 0
  line-height 1.6
  
  +respond(mobile)
    font-size 1rem

.solution-info
  margin-top auto
  padding-top 1.5rem
  border-top 1px solid #e0e0e0
  display flex
  flex-direction column
  gap 0.75rem

.solution-time
  font-size 0.9rem
  font-weight 500
  color neutral-dark
  
  +respond(mobile)
    font-size 0.85rem

.solution-support
  font-size 0.85rem
  font-weight 400
  color neutral-gray
  
  +respond(mobile)
    font-size 0.8rem

