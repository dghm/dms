// Header Component Styles

.site-header
  background-color base-white
  padding 1rem 0
  box-shadow shadow
  position sticky
  top 0
  z-index 1000
  backdrop-filter blur(10px)
  background-color rgba(255, 255, 255, 0.95)
  
  +respond(tablet)
    padding 0.75rem 0
  
  +respond(mobile)
    padding 0.5rem 0

  .container
    layout-container()

.header-content
  display flex
  align-items center
  justify-content space-between
  gap 2rem

  +respond(laptop)
    gap 1.5rem

  +respond(tablet)
    flex-wrap wrap
    gap 1rem

  +respond(mobile)
    gap 0.75rem
    position relative

// Header Actions
.header-actions
  display flex
  align-items center
  gap 1rem
  flex-shrink 0
  margin-left auto
  
  +respond(laptop)
    gap 0.75rem

  +respond(tablet)
    gap 0.5rem
  
  +respond(mobile)
    gap 0.5rem
    margin-left auto
    justify-content flex-end

// Desktop Only (語言選擇器在桌面顯示)
.desktop-only
  +respond(mobile)
    display none !important

// Header 中的語言選擇器在手機上隱藏
.header-actions .language-switcher.desktop-only
  +respond(mobile)
    display none !important

// Mobile Menu Toggle Position
.mobile-menu-toggle
  +respond(mobile)
    order 2
    margin-left 0
    margin-right 0

// Brand
.brand
  flex-shrink 0

  .brand-link
    display flex
    align-items center
    gap 1rem
    text-decoration none
    
    +respond(tablet)
      gap 0.75rem
    
    +respond(mobile)
      gap 0.5rem

  .brand-logo
    height 50px
    width auto
    display block
    flex-shrink 0
    
    +respond(laptop)
      height 45px

    +respond(tablet)
      height 40px
    
    +respond(mobile)
      height 35px

  .brand-text
    display flex
    flex-direction column
    justify-content center
    gap 0
    margin-top 0.75rem
    
    +respond(tablet)
      margin-top 0.5rem
    
    +respond(mobile)
      margin-top 10px
      gap 0

  .brand-name
    font-size 1.5rem
    font-weight 600
    color primary-color
    line-height 1.2
    white-space nowrap
    
    +respond(laptop)
      font-size 1.3rem

    +respond(tablet)
      font-size 1.1rem
    
    +respond(mobile)
      font-size 1.5rem
      white-space normal

  .brand-tagline
    font-size 0.85rem
    font-weight 400
    color neutral-gray
    line-height 1.2
    white-space nowrap
    
    +respond(laptop)
      font-size 0.8rem

    +respond(tablet)
      font-size 0.75rem
    
    +respond(mobile)
      font-size 0.7rem
      // display none // 手機顯示 tagline

// Mobile Menu Toggle Button
.mobile-menu-toggle
  display none
  background none
  border none
  cursor pointer
  padding 0.5rem
  z-index 1001
  flex-shrink 0
  position relative
  width 40px
  height 40px
  justify-content center
  align-items center
  
  +respond(mobile)
    display flex
  
  &:focus
    outline 2px solid primary-color
    outline-offset 2px
    border-radius 4px

.menu-icon
  display flex
  flex-direction column
  justify-content space-between
  width 24px
  height 18px
  position relative
  transition transform 0.3s ease

.menu-line
  display block
  height 2px
  width 100%
  background-color neutral-dark
  border-radius 2px
  transition all 0.3s ease
  transform-origin center

// Menu Toggle Active State
.site-header.menu-open
  .mobile-menu-toggle
    .menu-icon
      .menu-line:nth-child(1)
        transform rotate(45deg) translate(5px, 6px)
      
      .menu-line:nth-child(2)
        opacity 0
        transform translateX(-10px)
      
      .menu-line:nth-child(3)
        transform rotate(-45deg) translate(5px, -7px)

// Main Navigation
.main-nav
  flex 1
  display flex
  justify-content flex-end

  +respond(laptop)
    order 3
    flex-basis 100%
    margin-top 1rem
    width 100%

  +respond(tablet)
    order 3
    flex-basis 100%
    margin-top 0.75rem
    width 100%

  +respond(mobile)
    order 3
    flex-basis 100%
    margin-top 0
    width 100%
    max-height 0
    overflow hidden
    transition max-height 0.3s ease, margin-top 0.3s ease
    display block

  +respond(mobile)
    .site-header.menu-open &
      max-height 500px
      margin-top 0.5rem

.nav-list
  display flex
  list-style none
  gap 1.5rem
  margin 0
  padding 0
  align-items center

  +respond(laptop)
    gap 1rem
    flex-wrap wrap
    justify-content center

  +respond(tablet)
    gap 0.75rem
    flex-wrap wrap
    justify-content center

  +respond(mobile)
    flex-direction column
    gap 0
    align-items stretch
    width 100%
    padding 0.5rem 0
    font-size 0.95rem

.nav-item
  margin 0

.nav-link
  color neutral-dark
  text-decoration none
  font-weight 500
  font-size 0.95rem
  text-transform uppercase
  letter-spacing 0.5px
  padding 0.5rem 0.75rem
  border-radius 4px
  transition all 0.3s ease
  display block
  position relative
  
  +respond(tablet)
    font-size 0.9rem
    padding 0.4rem 0.6rem
  
  +respond(mobile)
    font-size 0.95rem
    padding 0.75rem 1rem
    letter-spacing 0.3px
    text-align left
    border-bottom 1px solid #e0e0e0
    text-transform none
    font-weight 600
    
    &:last-child
      border-bottom none

  &:hover
    color primary-color
    background-color neutral-light
    
    +respond(mobile)
      background-color neutral-light
      color primary-color

  &:active
    transform translateY(1px)
    
    +respond(mobile)
      transform none


.language-switcher
  display flex
  align-items center

.language-select
  padding 0.5rem 1rem
  border 1px solid #e0e0e0
  border-radius 4px
  background-color base-white
  color neutral-dark
  font-size 0.9rem
  cursor pointer
  transition all 0.3s ease
  
  +respond(tablet)
    padding 0.4rem 0.8rem
    font-size 0.85rem
  
  +respond(mobile)
    padding 0.35rem 0.6rem
    font-size 0.8rem

  &:hover
    border-color primary-color
    color primary-color

  &:focus
    outline none
    border-color primary-color
    box-shadow 0 0 0 3px rgba(20, 52, 99, 0.1)

