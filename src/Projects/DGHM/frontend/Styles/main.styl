// DGHM Styles

// Import Variables
@import 'variables.styl'

// Import Components
@import 'components/header.styl'
@import 'components/hero.styl'
@import 'components/services.styl'
@import 'components/solutions.styl'
@import 'components/about.styl'
@import 'components/howIWork.styl'
@import 'components/testimonials.styl'
@import 'components/cta.styl'

// Base Styles
*
  margin 0
  padding 0
  box-sizing border-box

html
  font-size 16px
  line-height 1.6
  scroll-behavior smooth

body
  font-family 'K2D', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif
  font-size 1rem
  color neutral-dark
  background-color base-white

// Layout
.container
  layout-container()

// Smooth scroll with offset for sticky header
section[id]
  scroll-margin-top 100px
  
  +respond(tablet)
    scroll-margin-top 80px
  
  +respond(mobile)
    scroll-margin-top 70px

.main-content
  min-height calc(100vh - 200px)
  padding 0rem 0

.site-footer
  background-color #f5f5f5
  color neutral-dark
  padding 2rem 0
  
  +respond(tablet)
    padding 1.5rem 0
  
  +respond(mobile)
    padding 1rem 0

.footer-content
  display flex
  justify-content space-between
  align-items center
  gap 2rem
  
  +respond(tablet)
    flex-direction column
    gap 1.5rem
    text-align center
  
  +respond(mobile)
    flex-direction column
    gap 1rem
    text-align center

.footer-brand
  display flex
  align-items flex-start
  gap 0.5rem
  
  +respond(tablet)
    justify-content center
    align-items center
    flex-direction column
    gap 1rem
  
  +respond(mobile)
    justify-content center
    align-items center
    flex-direction column
    gap 1rem

.footer-logo
  height 40px
  width auto
  display block
  flex-shrink 0
  
  +respond(tablet)
    height 35px
  
  +respond(mobile)
    height 30px

.footer-brand-info
  display flex
  flex-direction column
  gap 0

.footer-company-name
  font-size 1.125rem
  font-weight 600
  color neutral-dark
  white-space nowrap
  
  +respond(tablet)
    font-size 1rem
  
  +respond(mobile)
    font-size 0.95rem

.footer-contact
  display flex
  flex-direction row
  align-items center
  gap 1rem
  flex-wrap wrap
  
  +respond(tablet)
    justify-content center
    text-align center
  
  +respond(mobile)
    flex-direction column
    align-items center
    text-align center
    gap 0.25rem

.footer-address,
.footer-phone,
.footer-email
  font-size 0.7rem
  font-weight 400
  color #666
  line-height 1.5
  white-space nowrap

.footer-copyright
  margin 0
  font-size 0.9rem
  font-weight 400
  color neutral-dark
  
  +respond(tablet)
    font-size 0.85rem
  
  +respond(mobile)
    font-size 0.8rem

// 基礎響應式設定
html
  +respond(tablet)
    font-size 15px
  
  +respond(mobile)
    font-size 14px

body
  +respond(mobile)
    font-size 0.95rem

